<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#E1E1E1"
    android:orientation="vertical" >

    <include
        android:id="@+id/alter_tittle"
        layout="@layout/layout_titlebar" />

    <LinearLayout
        android:id="@+id/ui8_userlogin_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/alter_tittle"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/userlogin_account_bk"
        android:orientation="vertical"
        android:padding="10dp" >

        <EditText
            android:id="@+id/alert_pas_old"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1.0"
            android:background="@null"
            android:hint="当前密码"
            android:singleLine="true"
            android:textColorHint="@color/ui8_userlogin_hinttextcolor"
            android:textSize="18dp" 
            android:enabled="false"/>

        <ImageView
            android:id="@+id/login_btn_clear_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/clear_account"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ui8_userlogin_mid"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ui8_userlogin_top"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/userlogin_account_bk"
        android:orientation="vertical"
        android:padding="10dp" >

        <EditText
            android:id="@+id/alert_pas_new"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1.0"
            android:background="@null"
            android:hint="新密码"
            android:password="true"
            android:singleLine="true"
            android:textColorHint="@color/ui8_userlogin_hinttextcolor"
            android:textSize="18dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/clear_account"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ui8_userlogin_bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ui8_userlogin_mid"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/userlogin_account_bk"
        android:orientation="vertical"
        android:padding="10dp" >

        <EditText
            android:id="@+id/alert_pas_new_new"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1.0"
            android:background="@null"
            android:hint="新密码"
            android:password="true"
            android:singleLine="true"
            android:textColorHint="@color/ui8_userlogin_hinttextcolor"
            android:textSize="18dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/clear_account"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ui8_userlogin_bottom"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp" >

        <Button
            android:id="@+id/alert_btn_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@drawable/ui8_wg_bg_dialog_btn_blue"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="重置"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/alert_btn_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1.0"
            android:background="@drawable/btn_red"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="提交"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</RelativeLayout>