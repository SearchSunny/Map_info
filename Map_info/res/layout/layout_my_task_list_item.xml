<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_vertical"
    android:paddingBottom="5dp"
    android:paddingTop="5dp" >

    <CheckBox
        android:id="@+id/my_task_list_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:button="@drawable/my_task_list_left"
        android:focusable="false" />

    <TextView
        android:id="@+id/my_task_list_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/my_task_list_checkbox"
        android:gravity="center"
        android:text="fadfasdfasdf"
        android:textColor="@color/user_text_c"
        android:textSize="18sp" >
    </TextView>

    <TextView
        android:id="@+id/my_task_list_text_decri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/my_task_list_text"
        android:gravity="center"
        android:text="fadfasdfasdf"
        android:textColor="@color/text_gray" >
    </TextView>

    <ImageView
        android:id="@+id/my_task_list_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/more_item_click"
        android:focusable="false" />

    <TextView
        android:id="@+id/my_task_list_text_decri_times"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/my_task_list_text"
        android:layout_below="@+id/my_task_list_text"
        android:gravity="center"
        android:text="fadfasdfasdf"
        android:textColor="@color/text_gray" />
    <TextView
        android:id="@+id/my_task_list_text_decri_statue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/my_task_list_text"
        android:layout_below="@+id/my_task_list_text_decri_times"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:text="fadfasdfasdf"
        android:textColor="@color/text_gray" />

</RelativeLayout>